    <script> function onSubmit(token) { document.getElementById("demo-form").submit(); } </script>
  </head>


  <body style="background-color:#bec3cc;">
    <script>const socket = io();</script>
    <div class="container main">

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4" style="height:70px !important;
       background-color:#3b5998 !important; padding-top:12px !important; justify-content:space-between; margin-bottom:10px !important;">
        <a class="navbar-brand fontsforweb_fontid_77695" href="/" style="margin-left:7%;">
          <b>Misericordia Web</b>
        </a>
        <a class="navbar-brand fontsforweb_fontid_77695" href="/logout" style="margin-right:9%; font-size:1.7rem;" id="salir">
          <b>Cerrar sesión</b>
        </a>
      </nav>

      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4" style="display:block; margin:auto;">
          <a href="/territorios" type="button" class="btn btn-warning" style="border-radius:10px;display:none; margin:auto; width:200px; height:40px; color:white;" id="volverTerritorios">Volver al Inicio</a>
          <br/>
          <a href="/estadisticas" type="button" class="btn btn-dark" style="display:none; margin:auto; border-radius:10px;" id="btnEstadisticasGlob">Ver estadísticas globales</a>
          <a href="/estadisticas/{{json.numero}}" type="button" class="btn btn-dark" style="display:none; margin:auto; margin-bottom:12px; border-radius:10px;" id="btnEstadisticas">Ver estadísticas del territorio {{ json.numero }}</a>
          <a href="/territorios/{{json.numero}}/1" type="button" class="btn btn-warning" style="display:none; margin:auto; width:200px; border-radius:10px; color:white; height:40px;" id="btnVolver">Volver al Territorio {{json.numero}}</a>
        </div>
        <div class="col-lg-4">
          <div class="row">
            <div class="col-lg-9">
              <div style="margin-right:10%;">
                <p class="fontsforweb_fontid_77695" style="font-size:1.2rem !important; margin:0; text-align:end;" id="userNav">
                  {{ json.user }}
                </p>
                <p class="fontsforweb_fontid_77695" style="font-size:1.2rem !important; margin:0; text-align:end;" id="groupNav">
                  Grupo {{ user.group }} 
                </p>
                <p class="fontsforweb_fontid_77695" style="display:none; font-size:1.2rem !important; text-align:end; margin-bottom:0px !important" id="roleNav"> </p>
              </div>
            </div>
            <div class="col-lg-3">

            </div>
          </div>

        </div>
      </div>

      <p style="display:none;" id="userEmail"> {{ json.user }} </p>
      <p style="display:none;" id="user.role"> {{ json.role }} </p>



      <script>
        role = {{json.role}} + 0;

        if (role==1) {
          document.getElementById('roleNav').innerText = 'Rol: Administrador';
          document.getElementById('roleNav').style.display = 'block';
        };

        if (location.pathname.slice(0,13)=='/territorios/' || location.pathname.slice(0,13)=='/estadisticas') {
          document.getElementById('volverTerritorios').style.display='block';
        };

        if (location.pathname=='/territorios' && role==1) {
          document.getElementById('btnEstadisticasGlob').style.display = 'block';
        };

        if (location.pathname.slice(0,13)=='/territorios/' && role==1) {
          document.getElementById('btnEstadisticas').style.display = 'block';
        };

        if (location.pathname.slice(-6)=='nopred' && role==1) {
          document.getElementById('btnEstadisticas').style.display = 'block';
        };

        if (location.pathname.slice(0,14)=='/estadisticas/' && role==1) {
          document.getElementById('btnVolver').style.display = 'block';
        };
      </script>  
        





      {{#if registerMessage }}
        <div class="alert alert-danger" role="alert" style="text-align:center; font-weight:600;"> ¡{{ registerMessage }} ! </div>
      {{/if }}

      {{#if signinMessage }}
        <div class="alert alert-primary" role="alert" style="text-align:center; font-weight:600;"> ¡{{ signinMessage }} ! </div>
      {{/if }}

      {{#if emailMessage }}
        <div class="alert alert-warning" role="alert" style="text-align:center; font-weight:600; display:none;" id="emailMsg"> {{ emailMessage }} </div>
      {{/if }}


      {{{body}}}


      <footer class="page-footer font-small teal pt-4" style="padding-top:0px !important;">

        <div class="footer-copyright text-center py-3" style="background-color:rgba(0, 0, 0, 0.87); color:blanchedalmond; padding-bottom:5px !important;" >
            <p> © 2020 Copyright:
              <a href="https://www.misericordiaweb.com"> misericordiaweb.com</a>
            </p>
        </div>

      </footer>

    </div>    <!-- close div .container -->

  </body>
</html>
